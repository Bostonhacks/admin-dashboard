generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Post {
  id        String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  String?
  author    User?   @relation(fields: [authorId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  posts     Post[]

  @@map("users")
}

model Applicant {
  id             Int     @id @default(autoincrement())
  acceptTerms    Boolean
  acceptTerms2   Boolean
  acceptTerms3   Boolean
  address        String
  age            String
  authProvider   String
  bostonhacks    String
  city           String
  collegeYear    String
  country        String
  diet           String
  educationLevel String
  email          String  @unique
  ethnicity      String
  firstName      String
  gender         String
  github         String
  lastName       String
  linkedin       String?
  major          String
  otherDiet      String
  phoneNumber    String
  portfolio      String?
  pronouns       String
  schoolLabel    String
  schoolValue    String
  shirtSize      String
  sleep          Boolean
  state          String
  status         String
  uid            String  @unique
  zipCode        String
}
